<div class="page-header">
  <h1>High Scores</h1>
</div>
<div class="row">
  <div class="col-md-6">
    <table>
      <thead>
        <tr>
          <th></th><% i = 0 %>
          <th>User</th>
          <th>Rank</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |x| %>
          <tr>
            <td><%= i += 1 %></td>
            <td><%= link_to(x) %></td>
            <td><%= rank(x.points) %></td>
            <td><%= x.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
